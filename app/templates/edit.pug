extends base.pug

block content
  .container
    div(id="app" class="row")
        h3(class="formTitle text-primary") Edit your profile:
        form
          .form-group
            .row
              .col-md-4
                label First Name: 
              .col-md-10
                input(type="text", class="form-control", v-model="myForm.firstName", placeholder="Enter your first name")
          .form-group
            .row
              .col-md-4
                label Last Name: 
              .col-md-10
                input(type ="text", class="form-control", v-model="myForm.lastName", placeholder="Enter your last name")
          .form-group
            .row
              .col-md-4
                label About me:
              .col-md-10 
                textarea(class="form-control", rows="10", v-model="myForm.aboutMe", placeholder="Write something about yourself ")
          .form-group
            .row
              .col-md-4
              .col-md-10
                  input(type "submit", value="Submit", class="btn btn-primary", @click="submitFormData()")

block sidebar
  a(href="changePicture") Change your profile picture
                                
block scripts
 script(src="../static/js/edit.js")
