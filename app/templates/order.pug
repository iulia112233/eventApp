extends base

block content
  #app
    .container
        .row
          form
            
            .col-md-4            
                .form-group
                    i(class="fa fa-user")
                    label Name
                    div(class="control has-icons-left has-icons-right")
                        input(class="input form-control", type="text", placeholder="First and Last", v-model='name')
                .form-group
                    i(class="fa fa-envelope")
                    label Email
                    div(class="control has-icons-left has-icons-right")
                        input(class="input form-control", type="text", placeholder="Email address", v-model='email')
                       
                hr(id='left-line')
                                
                .form-group
                    label(for="card_number") Card Number
                    input(id="card_number", v-model="card.number", type="text", :class="['is-danger' ? cardNumberError : '', 'input']", placeholder='4242424242424242', class="form-control")
                    span(class="help is-danger", v-show="cardNumberError")
                        {{ cardNumberError }}
                .form-group
                    label(for="cvc") CVC
                    input(id="cvc", v-model="card.cvc", type="text", class="input", placeholder='123', class="form-control")
                    span(class="help is-danger", v-show="cardCvcError")
                        {{ cardCvcError }}
                .form-group
                    label(for="exp_month") Expiry Month>
                    
                    input(id="exp_month", v-model="card.exp_month", type="text", :class="['is-danger' ? cardMonthError : '', 'input']", placeholder="MM", class="form-control")
                    span(class="help is-danger", v-show="cardMonthError")
                        {{ cardMonthError }}

                .form-group
                    label(for="exp_month") Expiry Year
                    input(id="exp_year", v-model="card.exp_year", type="text", :class="['is-danger' ? cardYearError : '', 'input']", placeholder="YY", class="form-control")
                    span(class="help is-danger", v-show="cardYearError")
                        {{ cardYearError }}
                                       
                div(class="help is-danger", v-if="cardCheckError")
                    span {{ cardCheckErrorMessage }}
                
            
            .col-md-4         
                label Special Note
                textarea(class="textarea form-control", placeholder="What would you like the note to say?", v-model='engravingText')
                
                hr
                
                .form-group
                    label Address
                    input(type='text', class='input form-control', v-model='address.street', placeholder='123 Fake St #303')
                
                .form-group
                    label City
                    input(type='text', class='input form-control', v-model='address.city', placeholder='San Francisco')
                
                .form-group
                label State
                    input(type='text', class='input form-control', v-model='address.state', placeholder='CA')
                
                .form-group
                    label Zip
                    input(type='text', class='input form-control', v-model='address.zip', placeholder='94607')
        .row
          .col-md-4
            div(class='panel panel-success')  
              .panel-heading
                label Tickets
              .panel-body
                div(class='row text-center') 
                  label Type: ${ type }
                div(class='row text-center')
                  label Price: ${ amount } ${ currency }
        .row
            .col-md-4
                button(type="submit", class="btn btn-primary", @click.prevent="validate", :disabled="cardCheckSending")
                
                    span(v-if="cardCheckSending")
                        i(class="fa fa-btn fa-spinner fa-spin") 
                        label Ordering...
                    
                    span(v-else)
                       label Place Order
block scripts
  script(src="../static/js/order.js")
             
