extends base

block content
  #app
    h3(class="text-primary formTitle") Reset your password
    .col-md-6
      form
        .form-group
          label New Password
          input(type='password', class="form-control", v-model="password", name="password", v-validate="'required:password'")
        .form-group
          label Repeat password
          input(type='password', class="form-control", v-validate="'required|confirmed:password'", name="repeat")
        .form-group
          button(type="button", class="btn btn-primary form-control", @click="validateBeforeSubmit()") OK
        .form-group
             div(v-show="errors.has('password') || errors.has('repeat')", v-bind:class="{'alert':isAlert, 'alert-danger':hasError, 'alert-success':isSuccess }")      
              ${ errors.first('password') }
              ${ errors.first('repeat') }
        .form-group
             div(v-show="outcome", v-bind:class="{'alert':isAlert, 'alert-danger':hasError, 'alert-success':isSuccess }")      
              ${ outcome }

  {% if username %}
  input(style="display:none",id="username", type="text", value="{{ username }}")
  {% endif %}


block scripts
  script(src="../static/js/resetPassword.js") 
